generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MlbbRole {
  EXP
  JUNGLE
  MID
  GOLD
  ROAM
}

model Profile {
  userId            String              @id @db.Uuid
  mlbbUsername      String?
  mlbbUserId        String?
  mlbbServerId      String?
  mlbbRole          MlbbRole?
  profilePictureUrl String?
  isCreator         Boolean             @default(false)
  displayName       String?
  Event             Event[]
  EventRegistration EventRegistration[]
  EventTeamPlayer   EventTeamPlayer[]
  ProfileHero       ProfileHero[]
}

model Event {
  id                Int                 @id @default(autoincrement())
  title             String
  description       String
  creator           Profile             @relation(fields: [profileUserId], references: [userId])
  profileUserId     String              @db.Uuid
  startDate         DateTime
  endDate           DateTime
  isActive          Boolean             @default(true)
  EventRegistration EventRegistration[]
  EventTeam         EventTeam[]
}

model EventRegistration {
  event         Event    @relation(fields: [eventId], references: [id])
  player        Profile  @relation(fields: [profileUserId], references: [userId])
  eventId       Int
  profileUserId String   @db.Uuid
  role          MlbbRole

  @@id([eventId, profileUserId])
}

model EventTeam {
  id              Int               @id @default(autoincrement())
  event           Event             @relation(fields: [eventId], references: [id])
  eventId         Int
  EventTeamPlayer EventTeamPlayer[]
}

model EventTeamPlayer {
  team          EventTeam @relation(fields: [eventTeamId], references: [id])
  player        Profile   @relation(fields: [profileUserId], references: [userId])
  role          MlbbRole
  eventTeamId   Int
  profileUserId String    @db.Uuid

  @@id([eventTeamId, profileUserId])
}

model Hero {
  id          Int           @id @default(autoincrement())
  name        String
  imageUrl    String
  ProfileHero ProfileHero[]
}

model ProfileHero {
  hero          Hero    @relation(fields: [heroId], references: [id])
  profile       Profile @relation(fields: [profileUserId], references: [userId])
  heroId        Int
  profileUserId String  @db.Uuid

  @@id([heroId, profileUserId])
}
