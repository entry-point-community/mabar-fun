{
  "extends": ["@v6/tsconfig/react-library.json"],
  "compilerOptions": {
    "outDir": "dist/",
    "jsx": "preserve",
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "composite": true
  },
  "exclude": ["node_modules", "dist/"]
}
